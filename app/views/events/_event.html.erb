<div class="event">
    <h3><%= event.name.capitalize %></h3>
    <div><%= event.date %></div>
    <div><%= event.location.capitalize %></div>
    <% unless current_page?(event_path(event)) %>
        <div><%= link_to "Link", event_path(event)%></div>
    <%end%>
    <%if user_signed_in?%>
    <div>
        <%=button_to "Attend", controller:"invitations", action: "create", params:{event:event} %>
    </div>
    <%end%>
</div>